<!-- Start Admission-Form Area -->
<section class="event-details-area section-gap">

	<div class="container">

		<div class="row">

			<div class="col-lg-8 event-details-left">

				<div class="details-content">

					<div class="col-lg-12 myform">
						<h3 class="mb-30">Admission Form</h3>
						<form action<%=path %> method="POST" enctype="multipart/form-data">

							<input type="hidden" name="_id" value=<%=_id %> id="id">

							<% if(_id===null){ %>
								<button class="btn btn-primary" id="rzp-button1">Pay Rs.50</button>
								<p><b>Note: You must pay the form fee Rs.50 before filling the form.</b></p>

								<% } else{ %>

									<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
										<symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
											<path
												d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
										</symbol>

									</svg>



									<div class="alert alert-success d-flex align-items-center" role="alert">
										<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img"
											aria-label="Success:">
											<use xlink:href="#check-circle-fill" />
										</svg>
										<div>
											&nbsp;Payment Successul of Rs.50.
										</div>
									</div>

									<% } %>

										<div class="mt-10">
											<hr>
											<h4>Student's Details</h4>
											<input type="text" name="first_name" placeholder="First Name"
												onfocus=" this.placeholder=''" onblur=" this.placeholder='First Name'"
												class=" single-input-primary" id="first_name">
										</div>
										<div class="mt-10">
											<input type="text" name="last_name" placeholder="Last Name"
												onfocus="this.placeholder = ''" onblur="this.placeholder = 'Last Name'"
												class="single-input-primary">
										</div>
										<div class="mt-10">
											<input type="text" name="class" placeholder="Class"
												onfocus="this.placeholder = ''" onblur="this.placeholder = 'Class'"
												class="single-input-primary">
										</div>
										<div class="input-group-icon mt-10">
											<input type="text" name="address"
												placeholder="Full-Address with district, state and pincode"
												onfocus="this.placeholder = ''"
												onblur="this.placeholder = 'Full-Address'" class="single-input-primary">
										</div>
										<div class="mt-10">
											<label for="dob" style="padding-left:1rem;">Date of Birth</label>
											<input type="date" name="dob" placeholder="Date of Birth"
												onfocus="this.placeholder = ''"
												onblur="this.placeholder = 'Date of Birth'"
												class="single-input-primary">
										</div>
										<div class="mt-10">
											<input type="tel" name="phone" placeholder="Mobile Number"
												onfocus="this.placeholder = ''"
												onblur="this.placeholder = 'Mobile Number'"
												class="single-input-primary">
										</div>
										<div class="mt-10">
											<input type="email" name="email" placeholder="Email"
												onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'"
												class="single-input-primary">
										</div>
										<div class="mt-10">
											<input type="tel" name="aadhaar" placeholder="Aadhaar number"
												onfocus="this.placeholder = ''"
												onblur="this.placeholder = 'Aadhaar number'"
												class="single-input-primary">
										</div>

										<div class="mt-10">
											<label for="photo" style="padding-left:1rem;">Photo</label>
											<input type="file" accept=".jpg, .jpeg, .png" name="photo"
												class="single-input-primary" required>
										</div>


										<hr>
										<h4>PARENTS DETAILS</h4>
										<div class="mt-10">
											<input type="text" name="guardian_name_first"
												placeholder="Fathers Name/ Guardians Name [First Name]"
												onfocus="this.placeholder = ''"
												onblur="this.placeholder = 'Fathers Name/ Guardians Name'"
												class="single-input-primary">
										</div>
										<div class="mt-10">
											<input type="text" name="guardian_name_last"
												placeholder="Fathers Name/ Guardians Name"
												onfocus="this.placeholder = ''"
												onblur="this.placeholder = 'Fathers Name/ Guardians Name [Last Name]'"
												class="single-input-primary">
										</div>

										<div class="mt-10">
											<input type="tel" name="phone_g" placeholder="Mobile Number"
												onfocus="this.placeholder = ''"
												onblur="this.placeholder = 'Mobile Number'"
												class="single-input-primary">
										</div>
										<div class="mt-10" style="padding-top:1rem; ">
											<center>
												<button type="submit" class="genric-btn info circle e-large"
													style="font-size:0.9rem;">Submit</button>
											</center>
										</div>
						</form>

					</div>
				</div>

			</div>





			<div class="col-lg-4 event-details-right">
				<div class="single-event-details">
					<h4>Admission Form - Offline</h4>
					<ul class="mt-10">
						<li class="justify-content-between d-flex">
							<span>Admission Form</span>
							<a href="./img/download/admission_form.pdf" download>Download Form</a>
						</li>
						<li class="justify-content-between d-flex">
							<span>Last date</span>
							<span>18th April, 2018</span>
						</li>

					</ul>
				</div>
				<div class="single-event-details">
					<h4>Venue</h4>
					<ul class="mt-10">
						<li class="justify-content-between d-flex">
							<span>Place</span>
							<span>Main Hallroom</span>
						</li>
						<li class="justify-content-between d-flex">
							<span>Street</span>
							<span>Bullevard Street</span>
						</li>
						<li class="justify-content-between d-flex">
							<span>City</span>
							<span>Santa Monica</span>
						</li>
					</ul>
				</div>
				<div class="single-event-details">
					<h4>Organiser</h4>
					<ul class="mt-10">
						<li class="justify-content-between d-flex">
							<span>Company</span>
							<span>Colorlib</span>
						</li>
						<li class="justify-content-between d-flex">
							<span>Street</span>
							<span>Bullevard Street</span>
						</li>
						<li class="justify-content-between d-flex">
							<span>City</span>
							<span>Santa Monica</span>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>
